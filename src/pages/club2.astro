---
import Abbar from "../components/Abbar.astro";
import Button from "../components/Button.astro";
import Header from "../components/Header.astro";
import '../styles/tailwind.css';
import 'animate.css';
import Radio from "../components/Radio.astro";
const { title } = Astro.props;
import MainLayout from "../layouts/MainLayout.astro";



---
<MainLayout title="BÃ¦llevin">
<section class="bg-white rounded-34">
    <div class="flex flex-row justify-between mx-6 pt-[46px]">
        <Abbar variant="secondary" size="large" href="/club2">1</Abbar>
        <a class="text-[12px] mt-1 hover:underline pl-1" href="/club2">Product</a>
        <div class="h-px w-full bg-black-500 mt-3 mx-2"></div>
        <Abbar variant="primary" size="large" href="/club3">2</Abbar>
        <a class="text-[12px] mt-1 hover:underline pl-1" href="/club2">Frequency</a>
        <div class="h-px w-full bg-black-500 mt-3 mx-2"></div>
        <Abbar variant="primary" size="large">3</Abbar>
        <p class="text-[12px] mt-1 hover:underline pl-1">Checkout</p>
    </div>
    <h3 class="text-blue-500 pl-xxs md:pl-2xl lg:pl-6xl mt-m text-slogan lg:text-large tracking-tighter font-light font-cooper">Choose number of bottles</h3>
    <p class="py-xs pl-xxs md:pl-2xl lg:pl-6xl text-tiny font-display text-black-500 lg:text-base">Select the number of wines you would like to recieve.</p>
</section>
<section class="bg-white rounded-34 h-screen pt-s ">
     <div class="grid grid-cols-5">
        <p class="text-tiny font-display -mb-m col-start-2 text-right">Bottles</p>
    </div>

    <div class="flex flex-row justify-center space-x-sm py-m animate__animated animate__fadeIn">
        <Radio value="3" name="bottles">3</Radio>
        <Radio value="6" name="bottles">6</Radio>
        <Radio value="12" name="bottles">12</Radio>
      </div>
    <div class="flex justify-center animate__animated animate__fadeIn">
        <Button variant="primary" size="medium" href="/club3">Next</Button>
    </div>
    <img class="mt-xxs md:-mt-2xl ml-s w-6xl lg:w-8xl h-auto" src="/gubbe1.png" alt="wine guy">
</section>
</MainLayout>