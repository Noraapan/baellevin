---
// Få adgang til `variant`, `size`, og `href` fra props
const { variant = "primary", size = "medium", href } = Astro.props;

// Definér knap-styling
const buttonStyling = "flex items-center justify-center border md transition ease-in-out w-[26px] h-[26px] rounded-full no-underline";
const variantClasses = {
    primary: "text-black-500 bg-white",
    secondary: "text-white bg-black-500 hover:bg-white hover:text-black-500",  
};
const sizeClasses = {
  large: "text-[16px]",
  small: "text-tiny",
};
---

<div>
  {
    href ? (
      <a href={href} class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}>
        <slot />
      </a>
    ) : (
      <button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}>
        <slot />
      </button>
    )
  }
</div>